@using ChefsAndDishes.Models

@model Chef


<div class="text-center">
    <h1 class="display-4">Add a new chef!</h1>
</div>
<div class="row">
    <div class="col-8 offset-2">
        <form action="CreateChef" method="post">
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-2 col-form-label">First Name</label>
                <div class="col-10">
                    <input type="text" asp-for="FirstName" class="form-control" placeholder="First Name">
                    <span asp-validation-for="FirstName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-10">
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name">
                    <span asp-validation-for="LastName"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Birthday" class="col-sm-2 col-form-label">Date of Birth</label>
                <div class="col-10">
                    <input type="date" asp-for="Birthday" class="form-control">
                    <span asp-validation-for="Birthday"></span>
                </div>
            </div>
            <div class="row justify-content-center">
                <input type="submit" class="btn btn-outline-success" value="Add Chef">
            </div>
        </form>
    </div>
</div>